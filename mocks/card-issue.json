{
  "request": {
    "method": "POST",
    "url": "/card/api/v1/b2b/card/issue",
    "bodyPatterns": [
      { "matchesJsonPath": "$[?(@.serviceType == 'CARD_ISSUE')]" }
    ]
  },
  "response": {
    "status": 200,
    "jsonBody": {
      "traceId": "{{jsonPath request.body '$.traceId'}}",
      "status": "SUCCESS",
      "message": "Card issued successfully"
    },
    "headers": {
      "Content-Type": "application/json"
    }
  }
}
